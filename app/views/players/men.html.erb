<div class="text-center">
  <h1>Men's Players</h1>
</div>

<% @players.each do |player| %>
  <div class="players-box col-xs-10 col-xs-offset-1">
    <h2><%= link_to player.name, player_path(player) %></h2>
    <% if player.comments.present? %>
      <div class="col-xs-12 col-sm-12">
        <blockquote>
        <% if player.comments.last.humanized_rating.present? %>
          <b><%= player.comments.last.humanized_rating %></b> -
        <% end %>
        <%= player.comments.last.message %>
        <small><%= player.comments.last.user.username %></small>
      </blockquote>
      </div>
    <% end %>
  </div>
<% end %>